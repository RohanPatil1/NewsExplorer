<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="244dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/notifBigIV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        tools:src="@drawable/ic_launcher_background" />

    <View
        android:id="@+id/top_gradient_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/top_shadow"
        android:gravity="top" />

    <View
        android:id="@+id/bottom_gradient_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bottom_shadow"
        android:gravity="bottom" />

    <TextView
        android:id="@+id/notifBigTitleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_gravity="bottom"
        android:ellipsize="end"
        android:fontFamily="serif"
        android:maxLines="1"
        android:shadowColor="@color/black_50"
        android:shadowDx="-1"
        android:shadowDy="-1"
        android:shadowRadius="2"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="normal"
        tools:text="NASA\u2019s CAPSTONE mission launches to the moon" />


    <TextView
        android:id="@+id/notifBigSubTitleTV"
android:layout_gravity="bottom"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:fontFamily="serif"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="2"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="NASA\u2019s CAPSTONE mission launches to the moon" />


</LinearLayout>